@model HouseTasksManager.Models.HouseTask

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>HouseTask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Owner" class="control-label"></label>
                <input asp-for="Owner" class="form-control" />
                <span asp-validation-for="Owner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assigned" class="control-label d-inline-block">Assign</label>
                <input asp-for="Assigned" type="checkbox" class="form-check d-inline-block" />
                <span asp-validation-for="Assigned" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Finished" class="control-label d-inline-block">Mark Task as finished</label>
                <input asp-for="Finished" type="checkbox" class="form-check d-inline-block" />
                <span asp-validation-for="Finished" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
