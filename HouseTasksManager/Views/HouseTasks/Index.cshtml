@model IEnumerable<HouseTasksManager.Models.HouseTask>

@{
    ViewData["Title"] = "Index";
}

<h4>Unassigned Tasks</h4>

<div class="d-flex justify-content-between">
    <span>
        <a asp-action="Index">Unassigned Tasks</a>
    </span>
    <span>
        <a asp-action="IndexAssigned">Assigned Tasks</a>
    </span>
    <span>
        <a asp-action="IndexCompleted">Completed Tasks</a>
    </span>
</div>
<div>
    <span>
        <a asp-action="Create">Create New</a>
    </span>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Description)*@
                Tasks List
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @if (item.Owner == null)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <span>Valor: </span>
                    @for (int i = 0; i < item.Value; i++)
                    {
                        <i class="bi bi-star-fill"></i>
                    }
                </td>
                <td>

                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-x"></i></a>

                </td>
            }
        </tr>
}
    </tbody>
</table>
